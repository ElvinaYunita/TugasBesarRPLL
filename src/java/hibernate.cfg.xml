<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/siabaru?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <mapping resource="com/ithb/model/Staff.hbm.xml"/>
    <mapping resource="com/ithb/model/Biayakuliah.hbm.xml"/>
    <mapping resource="com/ithb/model/Hakakses.hbm.xml"/>
    <mapping resource="com/ithb/model/Mahasiswa.hbm.xml"/>
    <mapping resource="com/ithb/model/Pembayaran.hbm.xml"/>
    <mapping resource="com/ithb/model/Matakuliah.hbm.xml"/>
    <mapping resource="com/ithb/model/Periode.hbm.xml"/>
    <mapping resource="com/ithb/model/Jadwal.hbm.xml"/>
    <mapping resource="com/ithb/model/Kelola.hbm.xml"/>
    <mapping resource="com/ithb/model/Departemen.hbm.xml"/>
    <mapping resource="com/ithb/model/Dosen.hbm.xml"/>
    <mapping resource="com/ithb/model/Berada.hbm.xml"/>
    <mapping resource="com/ithb/model/Fakultas.hbm.xml"/>
    <mapping resource="com/ithb/model/Jadwalhadir.hbm.xml"/>
    <mapping resource="com/ithb/model/Kelas.hbm.xml"/>
    <mapping resource="com/ithb/model/Nilai.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
